---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Layout from '../layouts/BlogPost.astro';
import IndexHeroImage from '../assets/github.png';
---

<Layout title="Write-ups & Dev Notes - Hack The Box / TryHackMe / Vulnhub"
	description="Mes write-ups HTB / THM / Vulnhub et mes astuces dev"
	pubDate={new Date('August 08 2025')}
	heroImage={IndexHeroImage}
	>
  <main
    class="min-h-screen flex flex-col items-center justify-center
           bg-neutral-900 text-neutral-100 px-6"
  >
    <section class="text-center max-w-xl">

      <p class="mt-4 text-lg text-neutral-300">
        Mes write-ups HTB / THM / Vulnhub et mes astuces dev
      </p>

      <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/about"
          class="border border-emerald-500 text-emerald-400
                 hover:bg-emerald-500 hover:text-neutral-900
                 transition-colors px-6 py-3 rounded-md font-semibold"
        >
          En savoir plus
        </a>

        <a
          href="https://github.com/Vesloo"
          target="_blank"
          rel="noopener"
          class="bg-neutral-800 text-neutral-100 hover:bg-neutral-700
                 transition-colors px-6 py-3 rounded-md font-semibold"
        >
          GitHub
        </a>
      </div>
    </section>
  </main>
</Layout>